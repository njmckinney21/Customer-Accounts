#include <iostream>
#include <fstream>
using namespace std;

//const for array size
const int NAME_SIZE = 30;
const int DATE_SIZE = 11;

//sructure defintion
struct Customer
{
	 char name;
	 char address;
	 char CityStateZip;
	 int telephoneNumber;
	 double accountBalance;
	 char lastPayment;
};

//function prototypes
void addRecord(fstream &);
void viewRecord(fstream &);
void changeRecord(fstream &);
void deleteRecord(fstream &);
void viewAll(fstream &);

int main()
{
	fstream customerAccounts;
	int choice;
	//display the menu and get choice
	do
	{
		//display menu
		cout << "\n1. Add a new record\n";
		cout << "2. View an existing record\n";
		cout << "3. Change an existing record\n";
		cout << "4. Delete an existing account\n";
		cout << "5. View all the accounts\n";
		cout << "\n6. Exit\n";

		//get users choice
		cout << "Enter your choice(1-4)\n";
		cin >> choice;

		//validate the choice

		//process the selection 
		switch (choice)
		{
		case 1:
			addRecord(customerAccounts);
			break;
		case 2:
			viewRecord(customerAccounts);
			break;
		case 3:
			changeRecord(customerAccounts);
			break;
		case 4:
			deleteRecord(customerAccounts);
			break;
		case 5:
			viewAll(customerAccounts);
			break;

		}
	} while (choice != 6);
	return 0;
}

